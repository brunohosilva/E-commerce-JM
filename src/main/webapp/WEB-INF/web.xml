<web-app xmlns = "http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation = "http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
  version = "3.1"
  metadata-complete = "true">

    <description>
      Sistema de Estoque
    </description>
    <display-name>App</display-name>

    <servlet>
        <servlet-name>App</servlet-name>
        <servlet-class>server.App</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Editar</servlet-name>
        <servlet-class>server.controller.Editar</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Estoque</servlet-name>
        <servlet-class>server.controller.Estoque</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Produto</servlet-name>
        <servlet-class>server.controller.Produto</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Registro</servlet-name>
        <servlet-class>server.controller.Registro</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>App</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Editar</servlet-name>
        <url-pattern>/editar</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Estoque</servlet-name>
        <url-pattern>/estoque</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Produto</servlet-name>
        <url-pattern>/produto</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Registro</servlet-name>
        <url-pattern>/registro</url-pattern>
    </servlet-mapping>
</web-app>